<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.anagrammi.controller.AnagrammiController">
   <top>
      <Label text="Lab5_Anagrammi" textFill="#d70c0c" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="100.0">
               <children>
                  <TextField fx:id="txtParola" />
                  <Button fx:id="btnCalcola" lineSpacing="100.0" mnemonicParsing="false" onAction="#doCalcola" text="Calcola Anagrammi" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Anagrammi Corretti">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="txtResult1" prefHeight="200.0" prefWidth="200.0" />
            <HBox>
               <children>
                  <Label text="Anagrammi Errati">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="txtResult2" />
            <HBox spacing="5.0">
               <children>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <bottom>
      <Label accessibleRole="IMAGE_VIEW" alignment="CENTER" text="Figura 2 Interfaccia grafica per il calcoli degli  anagrammi" textFill="#3c95c9">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
